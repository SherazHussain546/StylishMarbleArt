rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
  
    // The gallery folder is world-readable, but only an authenticated
    // user (the admin) can upload or delete files.
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

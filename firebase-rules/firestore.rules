rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // GALLERY: Public can read, only signed-in admins can write/delete
    match /gallery/{imageId} {
      allow read;
      allow write, delete: if isSignedIn();
    }
    
    // CONTACT MESSAGES: Only signed-in admins can read/delete, anyone can create
    match /contact-messages/{messageId} {
      allow read, delete: if isSignedIn();
      allow create;
    }
    
    // TESTIMONIALS: Public can read, only signed-in admins can write/delete
    match /testimonials/{testimonialId} {
      allow read;
      allow write, delete: if isSignedIn();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an authenticated admin
    function isAdmin() {
      return request.auth != null;
    }

    // GALLERY: Public can read, only admin can write/delete
    match /gallery/{imageId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    
    // CONTACT MESSAGES: Only admin can read/write/delete
    match /contact-messages/{messageId} {
      allow read, write, delete: if isAdmin();
    }

    // TESTIMONIALS: Public can read, only admin can write/delete
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    // Lock down all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

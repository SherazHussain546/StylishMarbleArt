
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an authenticated admin
    function isAuthedAdmin() {
      return request.auth != null;
    }

    // GALLERY: Public can read, only admin can write/delete
    match /gallery/{imageId} {
      allow read: if true;
      allow write, delete: if isAuthedAdmin();
    }

    // CONTACT MESSAGES: Only admin can read/write/delete
    match /contact-messages/{messageId} {
      allow read, write, delete: if isAuthedAdmin();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
